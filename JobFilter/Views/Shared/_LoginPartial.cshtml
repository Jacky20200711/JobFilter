@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link href="~/css/LoginPartial.css" rel="stylesheet">

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="my-class" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">您好，@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="MyButton" id="HoverColor">登出</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="my-class" asp-area="Identity" asp-page="/Account/Register" id="HoverColor">註冊</a>
        </li>
        <li class="nav-item">
            <a class="my-class" asp-area="Identity" asp-page="/Account/Login" id="HoverColor">登入</a>
        </li>
    }
</ul>
