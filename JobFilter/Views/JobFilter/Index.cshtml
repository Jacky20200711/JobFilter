@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<JobFilter.Models.DataStructure.Job>

<style>
    .Row {
        width: 60%;
        white-space: nowrap;
        background-color: #fffaf2;
        border: 2px solid #ff9100;
        border-radius: 16px;
        height: auto;
    }

    a.MyLink {
        position:relative;
        color: #008dff;
        text-decoration: none;
        margin-left: 3%;
        top:10px;
        font-size: xx-large;
    }

    a:hover {
        color: #008dff;
        text-decoration: none;
    }

    .Company {
        position: relative;
        top: 10px;
        margin-left: 3.6%;
        font-size: large;
    }

    .AreaAndLimit {
        position: relative;
        top: 14px;
        margin-left: 3.5%;
        font-size: large;
    }

    .PartialContent {
        display: inline-block;
        max-width: 100%;
        white-space: normal;
        word-wrap: break-word;
        word-break: break-all;
        font-size: 14px;
        color: #7e7e7e;
        margin-top: 2.6%;
        margin-left: 3%;
        font-size: x-large;
    }

    .Wage {
        display: inline-block;
        max-width: 100%;
        color: brown;
        background-color: #eee;
        margin-top: 1%;
        margin-left: 3.4%;
        margin-bottom: 2.5%;
        font-size: large;
    }
</style>

